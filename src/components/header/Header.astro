</header>

<script>
  // Define scroll threshold
  const SCROLL_THRESHOLD = 0;
  
  // Define class names for toggling
  const CLASSES = {
    HEADER_SHADOW: 'shadow-md',
    NAV_PADDING_LARGE: 'p-6',
    NAV_PADDING_SMALL: 'p-2',
  } as const;

  // Initialize sticky header behavior
  function initStickyHeader(): void {
    // Get header and nav elements
    const header = document.getElementById('header');
    const nav = document.getElementById('nav');
    
    // Guard clause
    if (!header || !nav) return;

    // Update header styles based on scroll position
    const updateHeaderStyles = (): void => {
      const isScrolled = window.scrollY > SCROLL_THRESHOLD;
      
      header.classList.toggle(CLASSES.HEADER_SHADOW, isScrolled);
      nav.classList.toggle(CLASSES.NAV_PADDING_LARGE, !isScrolled);
      nav.classList.toggle(CLASSES.NAV_PADDING_SMALL, isScrolled);
    };

    window.addEventListener('scroll', updateHeaderStyles, { passive: true });
  }

  // Call the initialization function
  initStickyHeader();
</script>