---
import bannerFull from '../../../assets/images/banners/banner-full.jpg';
import bannerTablet from '../../../assets/images/banners/banner-tablet.jpg';
import bannerMobile from '../../../assets/images/banners/banner-mobile.jpg';
---

<section
  class="pt-6 flex items-center justify-center flex-col h-full min-h-fit sm:mx-2"
  aria-labelledby="banner-title"
  role="banner"
>
  <h1
    id="banner-title"
    class="text-typo-3 xl:text-size-13xl md:text-size-8xl text-size-7xl tracking-tight font-family-heading font-bold mb-2 text-center sm:leading-none md:leading-tight"
  >
    Our Blooms<sup class="font-thin" aria-label="registered trademark">Â®</sup>
  </h1>
  <picture>
    <source srcset={bannerFull.src} media="(min-width: 1280px)" type="image/jpeg" />
    <source srcset={bannerTablet.src} media="(min-width: 800px)" type="image/jpeg" />
    <img
      src={bannerMobile.src}
      alt="Elegant bouquet of fresh flowers arranged in a vase"
      width={bannerMobile.width}
      height={bannerMobile.height}
      loading="eager"
      decoding="async"
      fetchpriority="high"
      class="w-full h-auto"
    />
  </picture>
</section>
