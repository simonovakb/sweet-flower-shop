---
import ServiceCard from '../../common/cards/service-card/ServiceCard.astro';
// Import flower images
import flower1 from '../../../assets/images/flowers/flower-1.jpg';
import flower2 from '../../../assets/images/flowers/flower-2.jpg';
import flower3 from '../../../assets/images/flowers/flower-3.jpg';
---

<section aria-labelledby="services-title">
  <div class="flex flex-col items-center text-center mb-18">
    <h3 class="text-5xl font-bold text-headline uppercase mb-4 tracking-tighter">What We Do</h3>

    <p class="text-base mb-6 tracking-tight text-gray-600 max-w-md font-family-outfit">
      We bring a touch of that simple magic into your world.
    </p>

    <hr class="h-px bg-divider border-0 w-full" />
  </div>

  <ServiceCard
    number="1"
    image={flower1.src}
    alt=""
    title="Floral Installations"
    description="Living art for homes, businesses, and events."
    className="mb-16"
  />
  <ServiceCard
    number="2"
    image={flower2.src}
    alt="Native Plant Arrangements"
    title="Native Plant Arrangements"
    description="Whether it’s a private retreat or a public space, we craft floral experiences that bloom beyond expectations."
    className="mb-16"
  />
  <ServiceCard
    number="3"
    image={flower3.src}
    alt=""
    title="Custom Floral Concepts"
    description="Your vision, our blooms. We build arrangements that are both personal and exquisitely simple. Whether it’s a private retreat or a public space, we craft floral experiences that bloom beyond expectations."
    className="mb-16"
  />
</section>
