---
import Header from '../components/header/Header.astro';
import Footer from '../components/footer/Footer.astro';
import bannerMobile from '../assets/images/banners/banner-mobile.jpg';

import 'swiper/css';
import '../styles/global.css';

type Props = {
  title?: string;
  description?: string;
}

const { 
  title = 'Our BloomsÂ® - Fresh Flowers & Floral Arrangements',
  description = 'Discover beautiful fresh flowers, custom arrangements, and floral installations for every occasion. Quality blooms delivered with care.'
} = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Fonts - Figtree & Caprasimo -->
    <link
      href="https://fonts.googleapis.com/css2?family=Figtree:wght@300;400;500;600;700;800&family=Caprasimo&family=Outfit&display=swap"
      rel="stylesheet"
    />

    <!-- Preload critical banner image -->
    <link slot="head" rel="preload" as="image" href={bannerMobile.src} fetchpriority="high" />

    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
